{
  "compilerOptions": {
    "target": "es2016",                  // 编译产物      
    "module": "commonjs",                  
    "moduleResolution": "node",          // 模块声明      
    "baseUrl": "./",                           
    "declaration": true,                 // 生成 d.ts 文件      
    "sourceMap": true,                   // 开启 sourcemap 方便打断点调试源文件      
    "outDir": "dist",     		 // 编译后输出文件夹
    "declarationDir": "dist",                  
    "esModuleInterop": true,                  
    "forceConsistentCasingInFileNames": true,  
    "strict": true,                            
    "skipLibCheck": true                       
  }
}
